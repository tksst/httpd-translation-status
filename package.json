{
  "devDependencies": {
    "browser-sync": "2.26.5",
    "concurrently": "4.1.0",
    "parcel-bundler": "1.12.3",
    "rimraf": "2.6.3",
    "typescript": "3.4.5"
  },
  "scripts": {
    "dev": "concurrently --kill-others \"npm:browser-sync\" \"npm:parcel-watch\"  ",
    "browser-sync": "browser-sync start --server dist/",
    "parcel-watch": "parcel watch src/index.html --public-url ./",
    "build": "parcel build src/index.html --public-url ./",
    "clean": "rimraf dist"
  }
}
